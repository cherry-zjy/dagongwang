/* pages/login/login.wxss */

.login-form {
  padding: 20rpx; 
  margin: 200rpx 40rpx 0 40rpx;
  box-shadow: 0 2px 2px 2px rgb(173,173,173);
  background-color: #fff;
}

.section {
  margin-top: 20rpx;
  margin-bottom: 30rpx;
  border-bottom: 1px solid rgb(173,173,173);
  height:60rpx;
  overflow:hidden;

}
.login-icon{
  width: 40rpx;
  height: 40rpx;
  float: left;
  margin-top: 10rpx;
  margin-left: 10rpx;
}
.input-box {
  float: left;
  background: #fff;
  padding: 0 30rpx;
  font-size: 28rpx;
  color: rgba(179, 179, 179, 1);
}
.codebox{
  position: relative;
}
.code{
  width: 60%;
}
.getcode{
  position: absolute;
  right: 10rpx;
  color: rgb(26,122,228);
  font-size: 28rpx;
  top: 0;
  padding-left: 20rpx;
  border-left: 1px solid rgb(173,173,173)
}

.errod {
  color: red;
  font-size: 25rpx;
  line-height: 43rpx;
  padding-left: 30rpx;
}

.btn {
  background: linear-gradient(to right, rgb(26,122,228) , rgb(0,215,229));
  color: #fff;
  margin-top: 50rpx;
}

.bg {
  height: 100vh;
  background-size: 100% 100%;
}
.service{
  margin-top: 50rpx;
  text-align: center;
  font-size: 25rpx;
}
.blue{
  color: rgb(26,122,228)
}
