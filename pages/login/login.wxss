/* pages/login/login.wxss */
page{
  background-color: #fff;
  text-align: center;
}
.bg-icon{
  width: 200rpx;
  height: 200rpx;
  margin-top: 50rpx;
}
.login-form {
  padding: 20rpx; 
  margin: 30rpx 40rpx 0 40rpx;
  background-color: #fff;
}

.section {
  margin-top: 80rpx;
  margin-bottom: 30rpx;
  border-bottom: 1px solid rgb(173,173,173);
  height:60rpx;
  overflow:hidden;
  position: relative;
}
.input-number{
  position: absolute;
  top: 0;
  left: 0;
  /* float: left; */
  margin-left: 10rpx;
}
.input-box {
  text-align: left;
  background: #fff;
  padding: 0 30rpx;
  font-size: 30rpx;
  color: rgba(179, 179, 179, 1);
}
.input-box.phone{
  position: absolute;
  top: 0;
  left: 100rpx;
}
.codebox{
  position: relative;
}
.code{
  width: 60%;
}
.getcode{
  position: absolute;
  right: 10rpx;
  font-size: 28rpx;
  top: 0;
  padding-left: 20rpx;
}

.errod {
  color: red;
  font-size: 28rpx;
  line-height: 43rpx;
  padding-left: 30rpx;
}
.btn-area{
  padding: 0;
}
.btn {
  background: #D33A31;
  width: 100%;
  color: #fff;
  margin-top: 50rpx;
}
.service{
  margin-top: 50rpx;
  text-align: center;
  font-size: 25rpx;
}
.grey{
  color: #BBBBBB;
}
.blue{
  color: #666666;
}
