/* pages/index/search/search.wxss */
page {
  background-color: #fff;
}
/* 搜索框 */
.search-box {
  width: 100%;
  border-bottom: 1px solid rgb(245,245,245);
  position: relative;
}
.serachbox{
  margin-left: 40rpx;
  width: 80%;
}
.search {
  height: 60rpx;
  background-color: rgb(245,245,245);
  font-size: 26rpx;
  padding: 0 30rpx;
  border-radius:50px;
  margin: 20rpx 0;
  opacity:0.5;
}
.serachimgbox{
  position: absolute;
  right: 30rpx;
  top: 10rpx;
  font-size: 26rpx; 
}

/* 热度搜索 */
.hotsearch{
  float: left
}
.title{
  font-size: 26rpx;
  margin-left: 50rpx;
  margin-top: 20rpx;
  margin-bottom: 50rpx;
}
.search-left{
  float: left;
  margin-left: 50rpx;
  margin-right: 50rpx;
  margin-top: 10rpx;
}
.search-right{
   margin-top: -10rpx;
}
.search-icon{
  width: 40rpx;
  height: 40rpx;
}
.smalltitle{
  font-size: 23rpx;
  margin-top: -10rpx;
}
.flex-wrp{
  margin-top: 5rpx;
  width:100%;
}
.search-tag{
  float: left;
  font-size: 22rpx;
  padding: 10rpx 20rpx;
  text-align: center;
  background-color: rgb(245,245,245);
  border-radius: 5px;
  margin: 10rpx 10rpx;
}
/* 企业 */
.companysearch{
  float: left;
  margin-top: 50rpx;
}
/* 历史搜索 */
 .history{
  padding-top: 50rpx;
  float: left;
} 
.historysearch{
  float: left;
  margin-left: 50rpx;
}
.historyimg{
  padding-top: 70rpx;
  float: right;
  margin-right: 50rpx;
  width: 30rpx;
  height: 30rpx;
}