/* pages/index/search/searchDetail/searchDetail.wxss */

/* 搜索框 */
.search-box {
  width: 100%;
  border-bottom: 1px solid rgb(245,245,245);
  position: relative;
}
.serachbox{
  margin-left: 5%;
  width: 80%;
}
.serachtext{
  position: absolute;
  right: 2%;
  top: 30rpx;
  width: 10%
}
.search {
  height: 60rpx;
  background-color: rgb(245,245,245);
  font-size: 30rpx;
  padding-left: 30rpx;
  margin: 20rpx 0;
}
/* 筛选、排序 */
.flex-wrp{
  margin-top: 5rpx;
  display:flex;
  background-color: #fff;
}
.flex-item{
  font-size: 30rpx;
  padding: 10rpx;
  text-align: center;
  width: 50%;
  color:rgb(173,173,173);
}
.screen{
  border-right: 1px solid rgb(245,245,245);
  border-bottom: 1px solid rgb(245,245,245);
}
.sort{
  border-bottom: 1px solid rgb(245,245,245);
}
.sort.on{
  color: #D33A31;
}
.screen.on{
  color: #D33A31;
}
.search-icon{
  width: 26rpx;
  height: 26rpx;
}
/* 列表 */
.list{
  width: 100%;
  position: absolute;
  top: 180rpx;
  z-index: 20;
  background-color: #fff;
}
.list .flex-item{
  color: #000;
  text-align: left;
  margin-left: 10rpx;
  border-bottom: 1px solid rgb(245,245,245);
}
.list-other{
  position: absolute;
  right: 50rpx;
  top: 40rpx;
  color: rgb(173,173,173);
}
.list-moneybox{
  margin: 10rpx 0;
}
.list-money{
  font-size: 25rpx;
  padding: 10rpx 20rpx;
  background-color: rgb(245,245,245);
  border-radius: 5px;
}
.list .flex-item{
  position: relative;
  width: 100%;
}
