/* pages/index/search/searchDetail/searchDetail.wxss */

/* 搜索框 */
.search-box {
  width: 100%;
  position: relative;
  background-color: #EFEFF4;
  padding: 20rpx 0;
}
.serachbox{
  margin-left: 40rpx;
  width: 80%;
}
.search {
  background-color: #fff;
  font-size: 30rpx;
  padding: 5rpx 0 5rpx calc(8% + 20rpx);
  border-radius: 25rpx;
}
.center{
  color: #BBBBBB;
}
.serachimgbox{
  position: absolute;
  right: 30rpx;
  top: 23rpx;
  font-size: 30rpx; 
  color: #333333
}
.serachbox .search-icon {
  position: absolute;
  left: 8%;
  width: 40rpx;
  height: 40rpx;
  top:25rpx;
  z-index: 1;
}
/* 筛选、排序 */
.flex-wrp{
  margin-top: 5rpx;
  display:flex;
  background-color: #fff;
}
.flex-item{
  font-size: 30rpx;
  padding: 10rpx;
  text-align: center;
  width: 50%;
  color:rgb(173,173,173);
}
.screen{
  border-right: 1px solid rgb(245,245,245);
  border-bottom: 1px solid rgb(245,245,245);
}
.sort{
  border-bottom: 1px solid rgb(245,245,245);
}
.sort.on{
  color: #D33A31;
}
.screen.on{
  color: #D33A31;
}
.search-icon{
  width: 26rpx;
  height: 26rpx;
}
/* 列表 */
.list{
  width: 100%;
  position: absolute;
  z-index: 20;
  background-color: #fff;
}
.list .flex-item{
  color: #000;
  text-align: left;
  margin-left: 10rpx;
  border-bottom: 1px solid rgb(245,245,245);
}
.list-other{
  position: absolute;
  right: 50rpx;
  top: 40rpx;
  color: rgb(173,173,173);
}
.list-moneybox{
  margin: 10rpx 0;
}
.list-money{
  font-size: 25rpx;
  padding: 10rpx 20rpx;
  background-color: rgb(245,245,245);
  border-radius: 5px;
}
.list .flex-item{
  position: relative;
  width: 100%;
}
