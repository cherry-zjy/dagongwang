<view class="page-section-spacing search-box">
  <view class="flex-wrp" style="flex-direction:row;">
    <view class="serachimgbox">
      <!-- <image bindtap='searchImg' class='search-icon' src='../../img/locat.png'></image> -->
    </view>
    <view class="serachbox">
      <input class='search' bindtap='gotosearch' placeholder='输入您想搜索的内容'></input>
      <image bindtap='searchImg' class='search-icon' src='../../img/serach.png'></image>
    </view>
    <view class="serachimgbox">
      <image bindtap='searchImg' class='search-icon' src='../../img/tuijian.png'></image>
    </view>
  </view>
</view>

<swiper indicator-dots="{{indicatorDots}}" autoplay="{{autoplay}}" interval="{{interval}}" duration="{{duration}}">
  <block wx:for="{{imgUrls}}">
    <swiper-item>
      <image src="{{item}}" class="slide-image" width="100%" height="100%" />
    </swiper-item>
  </block>
</swiper>

<view class='info-list' wx:for="{{jobList}}" wx:key="index" data-id="{{item.ID}}" bindtap='jobDetail'>
  <view class='list-img'>
    <image class='img-msg' src='{{item.Display_Image}}'></image>
    <view class='job-size'>6000人</view>
  </view>
  <view class='job-line'></view>
  <view class='list-jobtext'>
    <view class='job-list'>
      <text class='job-title'>3800~4500<text class='job-address'>元</text>
      </text>
      <view class="page-section-spacing">
        <view class="flex-wrp" style="flex-direction:row;">
          <view class="flex-item job-tag">环境好</view>
          <view class="flex-item job-tag">流水线</view>
          <view class="flex-item job-tag">妹子多</view>
        </view>
      </view>
      <text class='job-address'>{{item.Address}}</text>
    </view>
  </view>
  <view class='subsidy-list'>
    <view class='subsidy'>补贴</view>
    <view class='subsidy-money'>200元</view>
  </view>
</view>