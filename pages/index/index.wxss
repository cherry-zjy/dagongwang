.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}

.tabbar-img {
  width: 100%;
  height: 380rpx;
  background-color: #261e2b;
}
.slide-image {
  width: 100%;
  height: 350rpx
}
