/*首页info列表  */

.info-listbtn {
  width: 710rpx;
  background-color: #1a1723;
  padding-left: 20rpx;
  padding-right: 20rpx;
  padding-bottom: 20rpx;
}

.info-list {
  width: 100%;
  background-color: #fff;
  display: flex;
}

/*列表图片  */

.list-img {
  padding: 20rpx;
  position: relative;
}

.img-msg {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
}
.job-size{
  position: absolute;
  bottom: 12rpx;
  font-size: 26rpx;
  text-align: center;
  border-radius: 3px;
  color: #fff;
  background-color: #D33A31;
  width: 100rpx;
}

/*列表信息  */

.job-list{
  margin-top: 10rpx;
}
.job-title {
  font-size: 32rpx;
  color: #D33A31;
  line-height: 39rpx;
  font-weight: 600;
}
.job-text {
  height: 84rpx;
  font-size: 23rpx;
  color: rgba(102, 102, 102, 1);
  line-height: 39rpx;
  margin-top: 20rpx;
}
.flex-wrp{
  margin-top: 5rpx;
  display:flex;
}
.flex-item{
  font-size: 22rpx;
  padding-right: 10rpx;
  text-align: center;
  color: #999999;
  border-right: 1rpx solid #999999;
}
.job-tag{
  margin: 0 10rpx 0 0;
  font-size: 26rpx;
}
.flex-wrp .job-tag:last-child{
  border-right: unset;
}
.job-address{
  font-size: 26rpx;
  color:rgb(173,173,173);
}

/* 补贴信息 */

.subsidy-list{
  position: absolute;
  right: 30rpx;
  margin-top: 30rpx;
  text-align: center;
  border: 1px solid #D33A31;
  width: 170rpx;
}
.subsidy{
  font-size: 26rpx;
  color: #fff;
  background-color: #D33A31;
  padding: 5rpx 40rpx;
}
.subsidy-money{
  font-size: 26rpx;
  padding: 5rpx 40rpx;
}

.none{
  text-align: center;
}
.tip{
  color: #666666;
}
.btn {
  background:#D33A31;
  opacity: 0.9;
  color: #fff;
  margin-top: 90rpx;
  width: 80%;
  font-size: 30rpx;
}
.icon{
  width: 300rpx;
  height: 300rpx;
  margin-top: 100rpx;
}