/* pages/money/sister/sister.wxss */

page{
  font-size: 30rpx;
  background-color: rgb(245,245,245);
}
.list-info {
  padding: 0 40rpx;
  height: 100rpx;
  background-color: #fff;
  overflow: hidden;
  font-size: 30rpx;
  border-bottom: 1rpx solid rgb(245,245,245);
}
.sister-img{
  width: 150rpx;
  height: 150rpx;
  float: left;
  border-radius: 50%;
  margin-left: 30rpx;
  margin-top: 20rpx;
}
.sister-agent{
  height: 190rpx;
  background-color: #fff;
}
.sister-name{
  float: left;
  margin: 50rpx 0 0 30rpx;
  font-size: 32rpx;
}
.sister-phone{
  color: #BBBBBB
}

/* 联系方式 */
.flex-wrp{
  display:flex;
}

.flex-item.msg{
  margin-left: 3%;
  padding: 20rpx 0;
}
.flex-wrp{
  padding: 20rpx;
  border-bottom: 1px solid #EEEEEE;
}
.sister-icon{
  width: 80rpx;
  height: 80rpx;
}
.connectbox{
  background-color: #fff;
  margin-top: 20rpx;
}
.last .flex-item.msg{
  border-bottom: unset;
}
.phone{
  text-align: center;
  margin-top: 50rpx;
}
.blue{
  color: #D33A31;
  font-weight: bolder;
}
/* 无经验 */
.none{
  text-align: center;
}
.btn {
  background: #D33A31;
  color: #fff;
  margin-top: 90rpx;
  width: 80%;
  font-size: 30rpx;
}
.noicon{
  width: 300rpx;
  height: 300rpx;
  margin-top: 100rpx;
}
.tip{
  color: #666666;
}
