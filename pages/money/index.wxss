/* pages/money/index.wxss */
/* 账户余额 */
.account{
  height: 200rpx;
  background: linear-gradient(to right, rgb(26,122,228) , rgb(0,215,229));
  width: 100%;
  color: #fff;
  font-size: 25rpx;
  padding: 20rpx 30rpx;
}
.blance{
  display: none;
  font-size: 80rpx;
  margin-top: 20rpx;
}
.blance.on{
  display: block;
}
.showview{
  display: inline-block;
}
.hideview{
  display: none;
}
.account-icon{
  width: 40rpx;
  height: 40rpx;
  margin-left: 20rpx;
}
.account-right{
  position: absolute;
  right: 30rpx;
  top: 20rpx;
}
.detail{
  text-align: right;
}
.withdraw{
  padding: 5px 30rpx;
  border: 1px solid #fff;
  margin-top: 50rpx;
}
/* 推荐好友 */
.recommend{
  height: 150rpx;
  margin-top: 20rpx;
  background-color: #fff;
}
.recommend-btn{
  background-color: rgb(251, 87, 42);
  color: #fff;
  float: right;
  margin-top: 50rpx;
  margin-right: 20rpx;
  padding: 0 15rpx;
  font-size: 25rpx;
}
.flex-wrp{
  display:flex;
  margin-top: 20rpx;
  background-color: #fff;
  text-align: center;
  padding: 20rpx 0;
}
/* 列表按钮 */
.list .flex-item {
  width: 33.3%;
}
.list-icon{
  width: 60rpx;
  height: 60rpx;
}
.list-text{
  font-size: 25rpx;
}
