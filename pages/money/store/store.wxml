<!--pages/money/store/store.wxml-->
<view wx:for="{{store}}" wx:key="index">
<view class='addressbox'>{{item.City}}</view>
 <view class="flex-wrp" style="flex-direction:row;" wx:for="{{item.Company}}" wx:for-item="items" wx:key="index" bindtap='storedetail'>
    <view class="flex-item icon">
      <image class="store-icon {{items.Type == 0? 'hideview' : ''}}" src='../../../../img/flag.png'></image>
      <image class="store-icon {{items.Type == 1? 'hideview' : ''}}" src='../../../../img/store.png'></image> 
    </view>
    <view class="flex-item msg">
    <view class='postage'>
      <text class='store-name'>{{items.Name}}</text>
      <text class='store-distance'>距离{{items.Distance}}</text>
    </view>
      <view class='store-address'>{{items.Address}}</view>
    </view>
  </view>
  </view>